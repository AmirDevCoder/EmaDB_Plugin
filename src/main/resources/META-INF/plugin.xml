<idea-plugin>
    <id>com.emamagic.EmaDBPlugin</id>
    <name>MyPlugin</name>
    <version>1.0</version>
    <vendor>Emamagic</vendor>

    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection implementationClass="com.emamagic.ConfigAnnotationInspection"
                         language="JAVA"
                         displayName="Config annotation validation"
                         groupName="Custom inspections"
                         level="ERROR"/>
        <localInspection implementationClass="com.emamagic.EntityAnnotationInspection"
                         language="JAVA"
                         displayName="Entity annotation validation"
                         groupName="Custom inspections"
                         level="ERROR"/>
        <localInspection implementationClass="com.emamagic.IdAnnotationInspection"
                         language="JAVA"
                         displayName="Id annotation validation"
                         groupName="Custom inspections"
                         level="ERROR"/>
    </extensions>
</idea-plugin>
